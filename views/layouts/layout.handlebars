<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.4.5/css/mdb.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.css"/>
    <link rel="stylesheet" type="text/css" href="/css/style.css"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.css" rel="stylesheet"/>


    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.4.5/js/mdb.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/js/client.js"></script>
</head>
<body>

<div class="backgroundImage">
    <img class="background" src="http://localhost:3000/images/CCNBackground.jpg" alt="My_Logo">
</div>

<div id="submitDiv" class="container">
    <div class="header clearfix">
        <nav>
            <ul class="nav nav-pills pull-right">
                {{#if user}}
                    <li role="presentation"><a href="/"><span class="glyphicon glyphicon-home"></span></a></li>
                    <li id="register" role="presentation"><a href="/users/register"><span class="glyphicon glyphicon-user"></span></a></li>
                    <li role="presentation"><a href="/users/logout">Logout</a></li>
                {{else}}
                {{/if}}
            </ul>
        </nav>
        <a href="/">
            <img class="logo" src="http://localhost:3000/images/logo.png" alt="My_Logo">
        </a>
        {{#if user}}
            <h2 class="dashboardHead">CCN Connections Dashboard</h2>
        {{/if}}
    </div>

    <div class="row">
        <div class="col-lg-12">
            {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>
            {{/if}}

            {{#if error_msg}}
                <div class="alert alert-danger">{{error_msg}}</div>
            {{/if}}

            {{#if error}}
                <div class="alert alert-danger">{{error}}</div>
            {{/if}}

            {{{body}}}
        </div>


    </div>

    <footer class="footer">
        <p>&copy; 2018 Childrenâ€™s Cancer Network. A registered 501(c)3 in Arizona. All rights reserved.</p>
    </footer>

</div><!-- /container -->

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.4.5/js/mdb.js"></script>
</body>
</html>