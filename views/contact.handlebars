<h2 class="page-header">Contacts</h2>
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}
<form method="Post" action="/contacts/contact">
    <div class="form-group">
        <label>Group</label>
        <input type="text" class="form-control" placeholder="Group" name="group">
    </div>
    <div class="form-group">
        <label>Number</label>
        <input type="text" class="form-control" placeholder="Number" name="number">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>